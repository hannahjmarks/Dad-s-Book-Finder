<Window x:Class="Dads_Book_Finder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dads_Book_Finder"
        mc:Ignorable="d"
        Title="Dad's Book Finder" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#001d3d"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Background="#000814" Grid.Row="0" Grid.Column="0">
            <Label Style="{StaticResource WindowTitle}" Content="Dad's Book Finder"/>
        </StackPanel>
        <StackPanel Background="#000814" Grid.Row="0" Grid.Column="1">

        </StackPanel>
    </Grid>
</Window>
